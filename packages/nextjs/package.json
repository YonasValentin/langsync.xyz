{
  "name": "@langsync/nextjs",
  "version": "1.1.1",
  "description": "Next.js integration for LangSync translation management with built-in language switching",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./plugin": {
      "import": {
        "types": "./dist/plugin.d.ts",
        "default": "./dist/plugin.js"
      },
      "require": {
        "types": "./dist/plugin.d.cts",
        "default": "./dist/plugin.cjs"
      }
    },
    "./loader": {
      "import": {
        "types": "./dist/loader.d.ts",
        "default": "./dist/loader.js"
      },
      "require": {
        "types": "./dist/loader.d.cts",
        "default": "./dist/loader.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pkgroll --minify",
    "dev": "pkgroll --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "translation",
    "i18n",
    "nextjs",
    "react",
    "langsync",
    "typescript"
  ],
  "author": "LangSync",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YonasValentin/langsync-packages.git",
    "directory": "nextjs"
  },
  "dependencies": {
    "@langsync/core": "workspace:*",
    "@langsync/client": "workspace:*"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/YonasValentin/langsync-packages/issues"
  },
  "homepage": "https://langsync.xyz"
}
