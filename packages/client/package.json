{
  "name": "@langsync/client",
  "version": "1.0.1",
  "description": "API client for LangSync translation management",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pkgroll --minify",
    "dev": "pkgroll --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "translation",
    "i18n",
    "api-client",
    "langsync",
    "typescript"
  ],
  "author": "LangSync",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YonasValentin/langsync-packages.git",
    "directory": "client"
  },
  "dependencies": {
    "@langsync/core": "workspace:*"
  },
  "peerDependencies": {},
  "bugs": {
    "url": "https://github.com/YonasValentin/langsync-packages/issues"
  },
  "homepage": "https://langsync.xyz"
}
